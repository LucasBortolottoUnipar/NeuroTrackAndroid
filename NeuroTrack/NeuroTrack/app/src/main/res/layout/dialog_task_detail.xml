<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <ImageView
        android:id="@+id/task_detail_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="Task Icon" />

    <TextView
        android:id="@+id/task_detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary_light"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/task_detail_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/text_secondary_light"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/task_detail_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/vibrant_purple"
        android:layout_marginTop="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="end">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fechar"
            android:background="@drawable/button_secondary_bg"
            android:textColor="@color/vibrant_purple"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btn_complete_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Completar"
            android:background="@drawable/button_primary_bg"
            android:textColor="@android:color/white" />
    </LinearLayout>
</LinearLayout>

