<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@drawable/degrade_fundo">

    
    <ImageView
        android:id="@+id/imageViewLogoCadastro"
        android:layout_width="254dp"
        android:layout_height="230dp"
        android:src="@drawable/logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>


    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cardCadastro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@drawable/bg_card_cadastro"
        app:layout_constraintTop_toBottomOf="@id/imageViewLogoCadastro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="-20dp">

        
        <TextView
            android:id="@+id/textViewTituloCadastro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Criar Nova Conta"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/fredoka_semibold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:layout_marginBottom="20dp"/>

        
        <EditText
            android:id="@+id/editTextNome"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:hint="Nome Completo"
            android:background="@drawable/bg_input_cadastro"
            android:paddingHorizontal="16dp"
            android:fontFamily="@font/fredoka_semibold"
            app:layout_constraintTop_toBottomOf="@id/textViewTituloCadastro"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"/>

        
        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:hint="E-mail"
            android:background="@drawable/bg_input_cadastro"
            android:paddingHorizontal="16dp"
            android:fontFamily="@font/fredoka_semibold"
            android:inputType="textEmailAddress"
            app:layout_constraintTop_toBottomOf="@id/editTextNome"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"/>

        
        <EditText
            android:id="@+id/editTextSenha"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:hint="Senha"
            android:background="@drawable/bg_input_cadastro"
            android:paddingHorizontal="16dp"
            android:fontFamily="@font/fredoka_semibold"
            android:inputType="textPassword"
            app:layout_constraintTop_toBottomOf="@id/editTextEmail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"/>

        
        <EditText
            android:id="@+id/editTextData"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:hint="Data de Nascimento"
            android:background="@drawable/bg_input_cadastro"
            android:paddingHorizontal="16dp"
            android:fontFamily="@font/fredoka_semibold"
            android:inputType="date"
            app:layout_constraintTop_toBottomOf="@id/editTextSenha"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"/>

        
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonCadastrar"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:text="Cadastrar"
            android:fontFamily="@font/fredoka_semibold"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:backgroundTint="@color/vibrant_purple"
            app:cornerRadius="28dp"
            app:layout_constraintTop_toBottomOf="@id/editTextData"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"/>

        
        <TextView
            android:id="@+id/textViewJaTenhoConta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JÃ¡ tenho uma conta."
            android:textSize="16sp"
            android:fontFamily="@font/fredoka_semibold"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/buttonCadastrar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

