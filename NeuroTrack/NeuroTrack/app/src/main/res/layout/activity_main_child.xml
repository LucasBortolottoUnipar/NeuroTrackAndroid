<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/degrade_fundo"
    android:padding="24dp">

    <TextView
        android:id="@+id/nomeUsuario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/fredoka_semibold"
        android:text="Olá, Usuário!"
        android:textColor="#3E3E3E"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="@+id/fotoPerfil"
        app:layout_constraintEnd_toStartOf="@+id/fotoPerfil"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fotoPerfil" />

    <ImageView
        android:id="@+id/fotoPerfil"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/circle_background"
        android:elevation="4dp"
        android:padding="2dp"
        android:src="@android:drawable/ic_menu_myplaces"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/starBg"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_star_24"
        android:tint="#F5C21C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fotoPerfil" />

    <TextView
        android:id="@+id/tvPontuacaoValor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fredoka_semibold"
        android:shadowColor="#40000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:text="1.250"
        android:textColor="#FFFFFF"
        android:textSize="26sp"
        app:layout_constraintBottom_toTopOf="@+id/tvPontuacaoLabel"
        app:layout_constraintEnd_toEndOf="@id/starBg"
        app:layout_constraintStart_toStartOf="@id/starBg"
        app:layout_constraintTop_toTopOf="@id/starBg"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tvPontuacaoLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fredoka_semibold"
        android:shadowColor="#40000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:text="PONTOS"
        android:textColor="#FFF8E1"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/starBg"
        app:layout_constraintEnd_toEndOf="@id/starBg"
        app:layout_constraintStart_toStartOf="@id/starBg"
        app:layout_constraintTop_toBottomOf="@+id/tvPontuacaoValor" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardRotina"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="24dp"
        app:cardElevation="0dp"
        app:strokeColor="#E0E0E0"
        app:strokeWidth="1dp"
        app:layout_constraintBottom_toTopOf="@+id/imgGatinho"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/starBg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_calendar"
                    app:tint="#16A3B5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/fredoka_semibold"
                    android:text="ROTINA DE HOJE"
                    android:textAllCaps="true"
                    android:textColor="#16A3B5"
                    android:textSize="16sp"
                    android:letterSpacing="0.05"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewTarefas"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:overScrollMode="never"
                tools:listitem="@android:layout/simple_list_item_1" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <ImageView
        android:id="@+id/imgGatinho"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginBottom="-35dp"
        android:elevation="10dp"
        android:src="@drawable/iconrewards"
        app:layout_constraintBottom_toTopOf="@+id/btnAdicionar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAdicionar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/fredoka_semibold"
        android:text="Resgatar Recompensas!"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:backgroundTint="#1DA1BC"
        app:cornerRadius="28dp"
        app:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
