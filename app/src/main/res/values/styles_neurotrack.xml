<?xml version="1.0" encoding="utf-8"?>
<resources>

    
    <style name="ShapeAppearance.NeuroTrack.Button" parent="@style/ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    
    <style name="Widget.NeuroTrack.PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/fredoka_semibold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="backgroundTint">@color/button_primary_blue</item>
        <item name="rippleColor">@color/overlay_light</item>
        <item name="shapeAppearance">@style/ShapeAppearance.NeuroTrack.Button</item>
    </style>

    
    <style name="Widget.NeuroTrack.SecondaryButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:fontFamily">@font/fredoka_semibold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/button_primary_blue</item>
        <item name="android:textSize">14sp</item>
        <item name="strokeColor">@color/button_primary_blue</item>
        <item name="rippleColor">@color/overlay_light</item>
        <item name="shapeAppearance">@style/ShapeAppearance.NeuroTrack.Button</item>
    </style>

    
    <style name="Text.NeuroTrack.CardTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:fontFamily">@font/fredoka_semibold</item>
        <item name="android:textColor">@color/text_primary_light</item>
        <item name="android:textSize">18sp</item>
    </style>

    
    <style name="Text.NeuroTrack.CardLabel" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/text_secondary_light</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>

