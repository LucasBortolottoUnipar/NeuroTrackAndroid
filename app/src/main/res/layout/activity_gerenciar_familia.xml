<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gerenciarFamiliaActivity"
    android:background="@drawable/degrade_fundo"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    android:paddingTop="32dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gerenciar Família"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/fredoka_semibold"
        android:textSize="24sp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMembros"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/imgGatinho"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView" />

    <ImageView
        android:id="@+id/imgGatinho"
        android:layout_width="170dp"
        android:layout_height="100dp"
        android:src="@drawable/gatoplus1"
        android:contentDescription="Mascote Gatinho"
        android:elevation="10dp"
        app:layout_constraintBottom_toTopOf="@+id/btnAdicionar"
        app:layout_constraintStart_toStartOf="@+id/btnAdicionar"
        app:layout_constraintEnd_toEndOf="@+id/btnAdicionar" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAdicionar"
        style="@style/Widget.NeuroTrack.PrimaryButton"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Adicionar Usuário!"
        android:textAllCaps="false"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>


